{
    "manifest_version": 2,
    "name"            : "Styler",
    "version"         : "1.0",
    "description"     : "Whatever",

    "options_page"    : "views/options.html",
    "background" : {
        "scripts": [
            "lib/require.js",
            "lib/background/module/file.js",
            "lib/background/module/manifest.js",
            "lib/background/module/create.js",
            "lib/background/index.js"
        ]
    },

    "content_scripts": [
        {
            "matches": [
                "*://*.github.com/*",
                "*://localhost/*",
                "*://code/*",
                "*://dir/*"
            ],
            "js": [
                "lib/require.js",
                "lib/client/module/server.js",
                "lib/client/index.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],

    "icons": {
        "16"  : "public/images/icon16.png",
        "48"  : "public/images/icon48.png",
        "128" : "public/images/icon128.png"
    },

    "permissions": [
        "tabs",
        "management",
        "*://*.github.com/*",
        "*://localhost/*",
        "*://code/*",
        "*://dir/*"
    ]
}
